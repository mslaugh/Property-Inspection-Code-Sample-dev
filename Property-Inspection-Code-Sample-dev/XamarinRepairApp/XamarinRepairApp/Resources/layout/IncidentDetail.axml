<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:background="@color/leftBg">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_topbg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="1dp"
        android:paddingRight="10dp"
        android:gravity="start"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="20dp"
            android:layout_height="22.5dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_toRightOf="@id/detail_back"
            android:layout_width="100.5dp"
            android:layout_height="22.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:contentDescription="@string/logo_desc"
            android:src="@drawable/logo_incidents" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/nav_topbg">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="fill_parent"
            android:id="@+id/incident_left"
            android:orientation="vertical"
            android:background="@color/leftBg"
            android:layout_alignParentLeft="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/valueColor"
                    android:text="@string/incident_propertytitle"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/house" />
                <TextView
                    android:id="@+id/detail_propertyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/titleColor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/person" />
                <TextView
                    android:id="@+id/detail_propertyOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/titleColor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/detail_propertyPhoto"
                    android:layout_width="320dp"
                    android:layout_height="210dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/default_logo"
                    android:scaleType="fitXY" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:background="@color/gray3"
                android:layout_marginTop="-36dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/detail_propertyAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/valueColor"
                    android:text="@string/detail_inspection"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/person" />
                <TextView
                    android:id="@+id/detail_inspectionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/titleColor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/at" />
                <TextView
                    android:id="@+id/detail_inspectionEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/titleColor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/date" />
                <TextView
                    android:id="@+id/detail_inspectionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/titleColor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp">
                <Button
                    android:id="@+id/detail_finalizeBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="@string/finalize_btntext"
                    android:background="@drawable/button_corner" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/incident_middle"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/gray2"
            android:layout_toRightOf="@id/incident_left" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/incident_right"
            android:orientation="vertical"
            android:layout_toRightOf="@id/incident_middle">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_roomTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/valueColor"
                        android:text="" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/valueColor"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="|" />
                    <TextView
                        android:id="@+id/detail_roomType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/valueColor"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center_horizontal"
                    android:background="@color/leftBg">
                    <ImageView
                        android:layout_width="530dp"
                        android:layout_height="72dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tab" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="-87dp">
                    <Button
                        android:id="@+id/detail_tabBtn1"
                        android:layout_width="176dp"
                        android:layout_height="72dp"
                        android:background="@color/tr" />
                    <Button
                        android:id="@+id/detail_tabBtn2"
                        android:layout_width="176dp"
                        android:layout_height="72dp"
                        android:background="@color/tr" />
                    <Button
                        android:id="@+id/detail_tabBtn3"
                        android:layout_width="178dp"
                        android:layout_height="72dp"
                        android:background="@color/tr" />
                </LinearLayout>
            </LinearLayout>
        <!-- tab 1 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:id="@+id/detail_tab1">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/valueColor"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/dispatcher"
                        android:textSize="16sp" />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
                <TextView
                    android:id="@+id/detail_incidentDispatcherComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/valueColor"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>
        <!-- tab 2 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/detail_tab2">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/valueColor"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/inspection"
                        android:textSize="16sp" />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/detail_inspectionImages"
                            android:layout_width="wrap_content"
                            android:layout_height="105dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
                <TextView
                    android:id="@+id/detail_incidentInspectionComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/valueColor"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>
        <!-- tab 3 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/detail_tab3">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/valueColor"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/add_repair_comments"
                        android:textSize="16sp" />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">
                        <ImageView
                            android:id="@+id/detail_camera"
                            android:layout_width="44dp"
                            android:layout_height="36dp"
                            android:src="@drawable/camera"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="bottom" />
                    </LinearLayout>
                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/detail_repairImages"
                            android:layout_width="wrap_content"
                            android:layout_height="105dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
                <TextView
                    android:id="@+id/detail_incidentRepairComments"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:textColor="@color/valueColor"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text=""
                    android:editable="true"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/detail_incidentRepairCommentsEdit"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:gravity="top"
                    android:textColor="@color/valueColor"
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text=""
                    android:editable="true"
                    android:textSize="12sp" />
                <Button
                    android:layout_gravity="right"
                    android:id="@+id/detail_commentDone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/detail_btnDoneText"
                    android:background="@drawable/done_button_corner" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/detail_largeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray3"
        android:visibility="gone"
        android:gravity="center">
        <ImageView
            android:id="@+id/detail_largeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/property_logo" />
        <ImageView
            android:id="@+id/detail_largeClose"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@id/detail_largeImage"
            android:layout_marginTop="-7dp"
            android:layout_marginRight="-8dp"
            android:src="@drawable/close" />
    </RelativeLayout>
</RelativeLayout>